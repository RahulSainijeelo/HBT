<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/widget_logo"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RISE"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toEndOf="@id/widget_logo"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@id/widget_logo"
        android:layout_marginTop="4dp"
        android:letterSpacing="0.2" />

    <TextView
        android:id="@+id/widget_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STAY FOCUSED"
        android:textColor="#888888"
        android:textSize="10sp"
        android:layout_toEndOf="@id/widget_logo"
        android:layout_marginStart="8dp"
        android:layout_below="@id/widget_title"
        android:letterSpacing="0.1" />

    <View
        android:id="@+id/widget_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_below="@id/widget_subtitle"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/widget_tasks_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â€¢ CHECK YOUR HABITS TODAY"
        android:textColor="#FF3B30"
        android:textSize="12sp"
        android:layout_below="@id/widget_divider" />

    <TextView
        android:id="@+id/widget_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPEN RISE"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="#1AFFFFFF"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp" />

</RelativeLayout>
