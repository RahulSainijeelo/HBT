<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="4dp"
    android:paddingEnd="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="center_vertical">

    <!-- Priority dot -->
    <View
        android:id="@+id/widget_item_priority"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/widget_priority_dot" />

    <!-- Custom checkbox circle -->
    <View
        android:id="@+id/widget_item_checkbox_bg"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/widget_checkbox" />

    <!-- Checkmark (shows on top when completed) -->
    <TextView
        android:id="@+id/widget_item_checkmark"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="-18dp"
        android:gravity="center"
        android:text="âœ“"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold" />

    <!-- Middle section: Title + DateTime -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <!-- Task title -->
        <TextView
            android:id="@+id/widget_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Date/Time inline text -->
        <TextView
            android:id="@+id/widget_item_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#666666"
            android:textSize="10sp"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Type indicator (T or H) -->
    <TextView
        android:id="@+id/widget_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="T"
        android:textColor="#666666"
        android:textSize="11sp"
        android:textStyle="bold" />

</LinearLayout>
