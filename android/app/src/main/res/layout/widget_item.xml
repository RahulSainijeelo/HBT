<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/widget_item_bg">

    <!-- Priority dot -->
    <TextView
        android:id="@+id/widget_item_priority"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:text=""
        android:background="@drawable/widget_priority_dot" />

    <!-- Checkbox circle -->
    <TextView
        android:id="@+id/widget_item_checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="â—‹"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <!-- Middle section: Title + Date/Time -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <!-- Task title -->
        <TextView
            android:id="@+id/widget_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Name"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Date/Time row -->
        <TextView
            android:id="@+id/widget_item_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#888888"
            android:textSize="10sp"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Type indicator (T or H) -->
    <TextView
        android:id="@+id/widget_item_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="T"
        android:textColor="#666666"
        android:textSize="10sp"
        android:textStyle="bold" />

</LinearLayout>
